{
	"$schema": "https://biomejs.dev/schemas/1.7.0/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"javascript": {
		"parser": {
			"unsafeParameterDecoratorsEnabled": true
		},
		"formatter": {
			"enabled": true,
			"quoteStyle": "single",
			"semicolons": "always",
			"indentStyle": "tab",
			"trailingCommas": "none",
			"indentWidth": 4,
			"lineWidth": 100
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"useImportType": "off",
				"useNumberNamespace": "off",
				"noNonNullAssertion": "warn"
			},
			"suspicious": {
				"noExplicitAny": "warn",
				"noAsyncPromiseExecutor": "warn"
			},
			"performance": {
				"noAccumulatingSpread": "warn"
			},
			"complexity": {
				"noStaticOnlyClass": "off"
			}
		}
	},
	"files": {
		"ignore": ["node_modules/*"]
	}
}
